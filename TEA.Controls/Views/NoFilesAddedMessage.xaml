<UserControl
  x:Class="TEA.Controls.Views.NoFilesAddedMessage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:TEA.Controls.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:resources="clr-namespace:TEA.Core.Resources;assembly=TEA.Core"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <StackPanel>
      <TextBlock
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Text="{x:Static resources:TextStringResources.NoFilesAdded}" />
      <TextBlock
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Text="{x:Static resources:TextStringResources.DragFilesToBegin}" />
    </StackPanel>
  </Grid>
</UserControl>
